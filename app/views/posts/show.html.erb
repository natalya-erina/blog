<div class="full_post">
	<i><%= link_to '<< Back', posts_path %></i>
	<h2 class="title">
	  <%= @post.title %>
	  <% if current_user == @post.user || current_user.is_admin %> 
	  	<b><%= link_to 'Edit', edit_post_path(@post) %>
	  	/ <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %></b>
	  <% end %>
	</h2>
	<p class="date">
	  Submitted <%= time_ago_in_words(@post.created_at) %> ago
	</p>

	<p class="body">
	  <%= @post.body %>
	</p>
</div>